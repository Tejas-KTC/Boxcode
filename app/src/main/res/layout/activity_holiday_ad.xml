<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:nestedScrollingEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="362dp"
                    android:layout_height="170dp"
                    app:cardCornerRadius="30dp"
                    android:background="@color/gray"
                    android:backgroundTint="#E6E3E3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/hello_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello,"
                        android:textColor="@color/purple"
                        android:textSize="28sp"
                        android:fontFamily="cursive"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="24dp"/>

                    <TextView
                        android:id="@+id/hello_user1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple"
                        android:textSize="30sp"
                        android:fontFamily="cursive"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="84dp"/>

                    <TextView
                        android:id="@+id/your"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your"
                        android:textColor="@color/black"
                        android:textSize="33sp"
                        android:fontFamily="serif"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="24dp"/>

                    <TextView
                        android:id="@+id/project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Projects(2)"
                        android:textColor="@color/black"
                        android:textSize="35sp"
                        android:layout_marginTop="105dp"
                        android:layout_marginLeft="24dp"/>

                    <ImageView
                        android:id="@+id/userpick"
                        android:layout_width="70dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="273dp"
                        android:layout_marginTop="50dp"
                        app:srcCompat="@drawable/purple_icon" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:nestedScrollingEnabled="false"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="210dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/purple"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_edittext2" />

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="135dp"
                            android:layout_marginTop="144dp"
                            android:background="@drawable/baseline_circle_24" />

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/custom_edittext1"
                            android:layout_marginLeft="145dp"
                            android:layout_marginTop="15dp"/>

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="145dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/baseline_arrow_outward_24" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="138dp"
                            android:layout_marginTop="137dp"
                            android:gravity="center"
                            android:text="+"
                            android:fontFamily="serif"
                            android:textColor="@color/white"
                            android:textSize="50dp" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/baseline_circle_24" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="22dp"
                            android:background="@drawable/baseline_shopping_bag_24" />

                        <TextView
                            android:id="@+id/daily_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="64dp"
                            android:text="Daily"
                            android:fontFamily="serif"
                            android:textColor="@color/black"
                            android:textSize="35sp" />

                        <TextView
                            android:id="@+id/task_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="106dp"
                            android:text="Task"
                            android:fontFamily="serif"
                            android:textColor="@color/black"
                            android:textSize="35sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="165sp"
                            android:text="0/4 tasks"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:fontFamily="serif"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="210dp"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@color/purple"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/custom_edittext1"
                            android:layout_marginTop="190dp"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/custom_edittext1"
                            android:layout_marginTop="190dp"
                            android:layout_marginLeft="20dp"/>

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="135dp"
                            android:layout_marginTop="144dp"
                            android:background="@drawable/baseline_circle_24" />

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/custom_edittext1"
                            android:layout_marginLeft="145dp"
                            android:layout_marginTop="15dp"/>

                        <ImageView
                            android:id="@+id/errow"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="145dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/baseline_arrow_outward_24" />

                        <TextView
                            android:id="@+id/add_data"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="138dp"
                            android:layout_marginTop="137dp"
                            android:gravity="center"
                            android:text="+"
                            android:fontFamily="serif"
                            android:textColor="@color/white"
                            android:textSize="50sp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/baseline_circle_24" />

                        <ImageView
                            android:id="@+id/imageview10"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="22dp"
                            android:background="@drawable/baseline_shopping_bag_24" />

                        <TextView
                            android:id="@+id/holiday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="64dp"
                            android:text="Holiday"
                            android:textColor="@color/white"
                            android:textSize="35sp"
                            android:fontFamily="serif"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="106dp"
                            android:text="Task"
                            android:textColor="@color/white"
                            android:textSize="35sp"
                            android:fontFamily="serif"/>

                        <TextView
                            android:id="@+id/task"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="165dp"
                            android:fontFamily="serif"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="356dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#E5E2E2"
                app:strokeColor="@color/purple">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Holiday Task"
                    android:textColor="@color/purple"
                    android:textSize="27dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="serif"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/measure5" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="285dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/measure6" />

            </com.google.android.material.card.MaterialCardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="590dp"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="    Mon    Tu    Wed    Th    Fri    Sat    Sun"
                android:textColor="#A69292"
                android:textSize="20sp"
                android:fontFamily="serif"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>